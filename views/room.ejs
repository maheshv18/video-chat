<!DOCTYPE html>
<html lang="en">
  
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Acment Video Chat</title>
    <link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
   
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
  </head>
  <body>
    <div class="header">
      <div class="logo">
        <div class="header__back">
          <i class="fas fa-chevron-circle-left"></i>
        </div>
        <h3>Acment Video Chat</h2>
      </div>
    </div>  
    <div class="main">  
    <div class="main__left" >
      <div class="videos__group" style="overflow-y:auto">
        <div id="video-grid">

        </div>
      </div>
      <div class="options">
        <div class="options__left">
          <div id="stopVideo" class="options__button">
            <i class="fa fa-video-camera"></i>
          </div>
          <div id="muteButton" class="options__button">
            <i class="fa fa-microphone"></i>
          </div>
          <div id="shareButton" class="options__button">
            <i class="far fa-share-square"></i>
          </div>
          
          <div id="showChat" class="options__button">
            <i class="fa fa-comment"></i>
          </div>
          <div id="inviteButton" class="options__button">
            <i class="fas fa-user-plus"></i>
          </div>
          <div id="endButton" class="options__button_end">
            <i class="fas fa-phone-slash"></i>
         </div>
        
        </div>
        
          
        
      </div>
    </div>
    <div class="main__right" >
      <div class="main__chat_window"  >
          <div class="messages" >

          </div>
      </div>
      <div class="main__message_container" id="example" >
        <input id="chat_message" type="text" autocomplete="off" placeholder="Type to chat ...">
        <div id="send" class="options__button">
          <i class="far fa-paper-plane" aria-hidden="true"></i>
        </div>
      </div>
    </div>
  </div>
  </body>
  <script src="script.js"></script>
</html>